<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_large"
    android:paddingTop="@dimen/dp_large"
    android:paddingRight="@dimen/dp_large"
    android:paddingBottom="@dimen/dp_large"
    android:fitsSystemWindows="true"
    android:theme="@style/ThemeOverlay.AppCompat.DayNight">

    <ImageView
        android:contentDescription="@string/app_name"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_xxxlarge"
        android:layout_marginLeft="@dimen/dp_xxlarge"
        android:layout_marginTop="@dimen/dp_xlarge"
        android:layout_marginBottom="@dimen/dp_xlarge"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:paddingTop="@dimen/dp_medium"
        app:tint="?colorPrimary"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_medium"
        android:text="@string/drawer_nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_nav_header_desc" />

</LinearLayout>